<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
                android:background="#33cccccc"
                android:clickable="true"
                >
    <ImageView
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/item_normal_select_iv"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:paddingRight="10dp"
        android:src="@drawable/cart_select_selector"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_normal_select_iv"
        android:layout_toEndOf="@+id/item_normal_select_iv">
        <ImageView
            android:id="@+id/item_normal_show_iv"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:src="@drawable/item_more"/>
        <TextView
            android:id="@+id/item_normal_content_tv"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_normal_show_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秋冬新款男装毛呢西装休闲西服外套商务青年韩版修身小西装"/>
        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_normal_content_tv"
            android:layout_toRightOf="@+id/item_normal_show_iv"
            android:id="@+id/item_normal_color_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="颜色：灰色,"/>
        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_below="@+id/item_normal_content_tv"
            android:layout_toRightOf="@+id/item_normal_color_tv"
            android:id="@+id/item_normal_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尺码：L"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#FF34F9"
            android:layout_below="@+id/item_normal_content_tv"
            android:id="@+id/item_normal_newprice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥199.00"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/item_normal_newprice_tv"
            android:layout_alignParentRight="true"
            >
        <TextView
            android:textSize="14sp"
            android:id="@+id/item_normal_oldprice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥399.00"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#5000"/>
        </FrameLayout>
        <ImageButton
            android:textColor="#000"
            android:focusable="false"
            android:id="@+id/item_normal_showmore_ib"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/expand"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item_normal_color_tv"
            android:layout_toRightOf="@+id/item_normal_show_iv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:focusable="false"
                android:id="@+id/item_normal_lessen_ib"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart_selector_lessen"/>
            <EditText
                android:inputType="number"
                android:id="@+id/item_normal_num_et"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart_selector_edit"/>
            <ImageButton
                android:focusable="false"
                android:id="@+id/item_normal_add_ib"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart_selector_add"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/item_normal_nogoods_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/no_goods"/>
</RelativeLayout>