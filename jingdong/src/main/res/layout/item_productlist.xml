<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topten="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_tintpink_bg"
        android:padding="10dp">

        <com.jerry.jingdong.views.RatioLayout
            android:id="@+id/item_productlist_rl_icon"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            topten:rlPicRatio="0.7"
            topten:rlRelative="height">

            <ImageView
                android:id="@+id/item_productlist_iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nopic"
                android:scaleType="fitXY"/>

        </com.jerry.jingdong.views.RatioLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_productlist_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="商品名称-商品名称"
                android:textColor="#000"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/item_productlist_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="荷兰原装进口-自家牧场-鲜奶-DHA智研360°"
                android:textColor="#444"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/item_productlist_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="RMB:202.00"
                android:textColor="#f00"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/item_productlist_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="评价: 11070"
                android:textColor="#444"
                android:textSize="14sp"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_productlist_iv_joincar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@mipmap/cartbar"
        android:tag="false"/>

    <ImageView
        android:id="@+id/item_productlist_iv_favorites"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/item_productlist_iv_joincar"
        android:background="@null"
        android:padding="3dp"
        android:src="@mipmap/details_ico_like"
        android:tag="false"/>

</RelativeLayout>