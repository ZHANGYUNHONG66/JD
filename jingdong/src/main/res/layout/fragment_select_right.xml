<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_goods_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/productdetial_1"/>

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_goods_pic"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:text="￥89.00"/>
            <TextView
                android:id="@+id/tv_price_saver"
                android:layout_toRightOf="@id/iv_goods_pic"
                android:layout_below="@id/tv_goods_price"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节省30.00元"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAddbuyCarPresess"/>
    <LinearLayout
        android:id="@+id/ll_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="颜色"/>
            <LinearLayout
                android:id="@+id/ll_color"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="尺码"/>
            <LinearLayout
                android:id="@+id/ll_size"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="数量"/>
            <ImageButton
                android:id="@+id/ib_reduce"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_goods_noadd"/>
            <EditText
                android:id="@+id/tv_select_goods_number"
                android:textIsSelectable="false"
                android:gravity="center"
                android:text="1"
                android:textCursorDrawable="@null"
                android:background="@drawable/selector_namber_edit"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <ImageButton
                android:id="@+id/ib_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_goods_add"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_cart"
        android:gravity="center"
        android:text="加入购物车"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/selector_add_buy_car"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>



</LinearLayout>