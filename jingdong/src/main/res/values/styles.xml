<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义RadioButton样式-->
    <style name="rb_content_style" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_bottomm_textselector</item>
    </style>

    <!--自定义title样式-->
    <style name="MyTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--自定义导航栏按钮样式-->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--自定义我的订单页面RadioButton样式-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/myorder_rb_textselector</item>
    </style>


        <style name="TabStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:button">@null</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_marginBottom">3dp</item>
            <item name="android:textColor">@color/tab_text_selector</item>
        </style>

    <!--*********结算中心样式  start*********-->
    <!--LinearLayout样式-->
    <style name="BlanceAccountLinearLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shouhuodizhibeijing</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--字体样式-->
    <style name="BlanceAccountAddressTextStyle">
        <item name="android:text" >xxx</item>
        <item name="android:textColor" >#fff</item>
        <item name="android:textSize" >14sp</item>
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
    </style>

    <!--加载内容ImageView样式-->
    <style name="BlanceAccountIvStyle">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:src">@drawable/balance_account_click_selector</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--自定义对话框-->
    <style name="locationstyles" parent="@android:style/Theme.Dialog">
    <!--    <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        &lt;!&ndash; 阴影效果 &ndash;&gt;
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <!-- 对话框外面点击关闭 -->
       <!-- <item name="android:windowCloseOnTouchOutside">true</item>-->
    </style>
    <!--*********结算中心样式  end*********-->

    <!--自定义订单详情页面TextEdit左边样式-->
    <style name="orderTextEditLeftStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--自定义订单详情页面TextEdit左边样式-->
    <style name="orderTextEditRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--自定义品牌保证字体栏样式-->
    <style name="BrandProtectTextStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
    </style>

</resources>
